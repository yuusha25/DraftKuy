<resources>
    <!-- Base application theme -->
    <style name="Theme.DraftKuy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/deep_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary/accent colors -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/dark_gold</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/deep_blue</item>
        <item name="android:navigationBarColor">@color/deep_blue</item>

        <!-- Window settings -->
        <item name="android:windowBackground">@color/deep_blue</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/ButtonStyle.DraftKuy</item>
        <item name="editTextStyle">@style/EditTextStyle.DraftKuy</item>
    </style>

    <!-- NoActionBar variant -->
    <style name="Theme.DraftKuy.NoActionBar" parent="Theme.DraftKuy">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button style (API 23 compatible) -->
    <style name="ButtonStyle.DraftKuy" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_gold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- EditText style (API 23 compatible) -->
    <style name="EditTextStyle.DraftKuy" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="colorControlNormal">@color/gold</item>
        <item name="colorControlActivated">@color/gold</item>
        <item name="colorControlHighlight">@color/gold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>