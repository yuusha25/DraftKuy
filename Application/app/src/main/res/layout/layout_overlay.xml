<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#CC333333"
    android:padding="4dp">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:background="#222222">

        <Button
            android:id="@+id/buttonCloseOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/textDraftkuyOverlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DRAFTKUY"
            android:textColor="#FFD700"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonAddOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="10sp"/>
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/mainContentOverlay"
        android:layout_below="@id/topBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <!-- Lane Columns -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Contoh 1 Lane -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lane"
                        android:textColor="#FFD700"
                        android:textStyle="bold"
                        android:textSize="10sp"/>

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#CCCCCC"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Hero"
                            android:textSize="10sp"
                            android:gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#CCCCCC"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Hero"
                            android:textSize="10sp"
                            android:gravity="center"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- Duplikasikan Lane jika diperlukan -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Sidebar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="#222222">

            <ImageButton
                android:id="@+id/buttonScanOverlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_camera"/>

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#CCCCCC"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hero"
                    android:textSize="10sp"
                    android:gravity="center"/>
            </FrameLayout>

            <Button
                android:id="@+id/buttonRecOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rec."
                android:textSize="10sp"
                android:layout_marginTop="8dp"/>

            <!-- OFF Button -->
            <Button
                android:id="@+id/buttonOffOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:background="#FF4444"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
