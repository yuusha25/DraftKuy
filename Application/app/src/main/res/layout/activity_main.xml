<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/header_background"
        android:paddingHorizontal="8dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="←"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/coinContainer"
            android:layout_toEndOf="@id/btnBack"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/coinContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp">

            <!-- Coin Icon -->
            <TextView
                android:id="@+id/ivCoin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="🪙"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/gold"/>

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivCoin"
                android:text="@string/default_coin_amount"
                android:textColor="@color/gold"
                android:layout_marginStart="4dp"/>

            <!-- Add Coins Button -->
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/tvCoins"
                android:text="+"
                android:textSize="20sp"
                android:textColor="@color/gold"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Hero Roles Table -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:fillViewport="true">

        <TableLayout
            android:id="@+id/heroTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/table_background"
            android:stretchColumns="*">

            <!-- Header Row -->
            <TableRow
                android:id="@+id/header_row"
                android:layout_height="48dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/role_roam"
                    android:textColor="@color/role_roam"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/role_jungler"
                    android:textColor="@color/role_jungler"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/role_midlane"
                    android:textColor="@color/role_midlane"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/role_goldlane"
                    android:textColor="@color/role_goldlane"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/role_xplane"
                    android:textColor="@color/role_xplane"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </TableRow>

            <!-- Hero rows will be populated programmatically -->
            <!-- Tidak perlu placeholder rows karena akan ditambahkan secara dinamis -->
        </TableLayout>
    </HorizontalScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="@string/btn_search"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnMeta"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="@string/btn_meta"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>